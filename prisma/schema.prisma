generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  fullName    String
  dateOfBirth DateTime
  gender      Gender   @default(male)
  password    String
  email       String   @unique
  createdAt   DateTime @default(now())
}

enum Gender {
  male
  female
  other
}
